rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: User must be signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper: Check if the user is accessing their own User Profile
    // (Document ID matches User UID)
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Helper: Check if the data belongs to the user
    // (For collections where document IDs are random, but data contains 'userId' field)
    match /{collection}/{document} {
      // 1. Creating new data: 'userId' field in the new data must match Auth UID
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      
      // 2. Reading/Updating/Deleting: 'userId' field in the existing data must match Auth UID
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
  }
}
